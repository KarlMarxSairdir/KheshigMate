    <script>
        // Odaya geri d√∂nmek i√ßin buton
        const dashboardRedirectBtn = document.getElementById('dashboard-redirect-btn');
        if(dashboardRedirectBtn){
            dashboardRedirectBtn.addEventListener('click', () => {
