                            window.roomKanbanBoard = new KanbanBoard('<%= project._id %>', window.socket);
                            window.kanbanInitialized = true;
                            console.log('‚úÖ Kanban board initialized successfully');
                        } catch (error) {
                            console.error('‚ùå Kanban initialization failed:', error);
                        }
                    }
                });
            }
        });
    </script>

