<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>KheshigMate - Profil Yönetimi</title>
    <meta name="description" content="KheshigMate Orta Asya Proje Yönetimi Profil Ayarları">
    <meta name="viewport" content="width=device-width, initial-scale=1">    <link rel="stylesheet" href="/css/style.css?v=8.0.0">
    <script src="https://kit.fontawesome.com/6510466b6c.js" crossorigin="anonymous"></script>
    
    <!-- Kullanıcı bilgilerini JavaScript'e aktar -->
    <script>
        const CURRENT_USER_ID = "<%= user._id %>";
        const CURRENT_USERNAME = "<%= user.username %>";
    </script>
</head>

<body class="modern-dashboard-page">
    <!-- Modern Dashboard Header -->
    <header class="modern-dashboard-header">
        <div class="header-content">
            <div class="header-left">
                <div class="dashboard-logo">
                    <i class="fas fa-horse-head"></i>
                    KheshigMate
                </div>
                <div class="breadcrumb">
                    <i class="fas fa-home"></i>
                    <span><a href="/dashboard" style="color: inherit; text-decoration: none;">Kheshig Merkezi</a></span>
                    <i class="fas fa-chevron-right" style="margin: 0 0.5rem; color: var(--muted);"></i>
                    <span>Profil Yönetimi</span>
                </div>
            </div>            <div class="header-right">
                <!-- User Profile Dropdown -->
                <div class="user-profile-dropdown">
                    <div class="user-profile-trigger" id="userProfileTrigger">
                        <div class="user-avatar">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <div class="user-details">
                            <span class="username"><%= user ? user.username : 'Kheshig Üyesi' %></span>
                            <span class="user-role">Elite Haberleşme Uzmanı</span>
                        </div>
                        <div class="dropdown-arrow">
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                    
                    <!-- Dropdown Menu -->
                    <div class="user-dropdown-menu" id="userDropdownMenu">
                        <div class="dropdown-header">
                            <div class="user-info">
                                <div class="user-avatar-large">
                                    <i class="fas fa-user-circle"></i>
                                </div>
                                <div class="user-meta">
                                    <h4><%= user ? user.username : 'Kheshig Üyesi' %></h4>
                                    <p><%= user ? user.email : 'email@example.com' %></p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="dropdown-divider"></div>
                          <div class="dropdown-items">
                            <a href="/profile" class="dropdown-item active">
                                <i class="fas fa-user-cog"></i>
                                <span>Profil Ayarları</span>
                            </a>
                            <a href="/dashboard" class="dropdown-item">
                                <i class="fas fa-tachometer-alt"></i>
                                <span>Dashboard</span>
                            </a>
                            <button type="button" class="dropdown-item logout-item" id="logoutButton">
                                <i class="fas fa-sign-out-alt"></i>
                                <span>Çıkış Yap</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>    <!-- Modern Dashboard Main Content -->
    <main class="modern-dashboard-main">
        <!-- Simple Profile Header -->
        <div class="dashboard-hero">
            <div class="hero-content">
                <h1 class="hero-title">
                    <i class="fas fa-user-cog"></i>
                    Profil Ayarları
                </h1>
                <p class="hero-subtitle">
                    Hesap bilgilerinizi güncelleyin ve profil ayarlarınızı yönetin
                </p>
            </div>
        </div>

        <!-- Success/Error Messages -->
        <% if (success) { %>
            <div class="modern-card success-card" style="margin-bottom: 1.5rem;">
                <div class="card-content">
                    <div class="alert-message success">
                        <i class="fas fa-check-circle"></i>
                        <span><%= success %></span>
                    </div>
                </div>
            </div>
        <% } %>
        
        <% if (error) { %>
            <div class="modern-card error-card" style="margin-bottom: 1.5rem;">
                <div class="card-content">
                    <div class="alert-message error">
                        <i class="fas fa-exclamation-circle"></i>
                        <span><%= error %></span>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Profile Dashboard Grid -->
        <div class="dashboard-grid">
            <!-- Kişisel Bilgiler Kartı -->
            <div class="modern-card profile-info-card">
                <div class="card-icon-header">
                    <div class="card-icon user-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="header-with-action">
                        <div>
                            <h2>Kişisel Bilgiler</h2>
                            <p>Kullanıcı adınızı ve e-posta adresinizi güncelleyin</p>
                        </div>
                        <button type="button" class="modern-secondary-btn edit-btn" onclick="toggleEdit('personal')">
                            <i class="fas fa-edit"></i>
                            <span id="personal-edit-text">Düzenle</span>
                        </button>
                    </div>
                </div>
                <div class="card-content">
                    <form id="personal-form" action="/profile/details" method="POST" style="display: none;">
                        <div class="modern-form-group">
                            <label for="username">
                                <i class="fas fa-user"></i>
                                Kullanıcı Adı
                            </label>
                            <input type="text" id="username" name="username" value="<%= user.username %>" 
                                   placeholder="Kullanıcı adınızı girin" required>
                        </div>
                        <div class="modern-form-group">
                            <label for="email">
                                <i class="fas fa-envelope"></i>
                                E-posta Adresi
                            </label>
                            <input type="email" id="email" name="email" value="<%= user.email %>"
                                   placeholder="E-posta adresinizi girin" required>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="modern-primary-btn">
                                <i class="fas fa-save"></i>
                                <span>Değişiklikleri Kaydet</span>
                            </button>
                            <button type="button" class="modern-secondary-btn" onclick="toggleEdit('personal')">
                                <i class="fas fa-times"></i>
                                <span>İptal</span>
                            </button>
                        </div>
                    </form>
                    
                    <div id="personal-display" class="profile-display">
                        <div class="info-grid">
                            <div class="info-item">
                                <div class="info-label">
                                    <i class="fas fa-user"></i>
                                    Kullanıcı Adı
                                </div>
                                <div class="info-value"><%= user.username %></div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">
                                    <i class="fas fa-envelope"></i>
                                    E-posta Adresi
                                </div>
                                <div class="info-value"><%= user.email %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>            <!-- Yetenekler Kartı -->
            <div class="modern-card skills-card">
                <div class="card-icon-header">
                    <div class="card-icon skills-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="header-with-action">
                        <div>
                            <h2>Yetenekler & Uzmanlık</h2>
                            <p>Becerilerinizi ve uzmanlık alanlarınızı düzenleyin</p>
                        </div>
                        <button type="button" class="modern-secondary-btn edit-btn" onclick="toggleEdit('skills')">
                            <i class="fas fa-edit"></i>
                            <span id="skills-edit-text">Düzenle</span>
                        </button>
                    </div>
                </div>
                <div class="card-content">
                    <form id="skills-form" action="/profile/skills" method="POST" style="display: none;">
                        <div class="modern-form-group">
                            <label for="skills">
                                <i class="fas fa-star"></i>
                                Yetenekler
                            </label>
                            <input type="text" id="skills" name="skills" 
                                   value="<%= user.skills ? user.skills.join(', ') : '' %>" 
                                   placeholder="Örn: JavaScript, React, Node.js, UI/UX, MongoDB">
                            <small class="form-help">
                                <i class="fas fa-info-circle"></i>
                                Yeteneklerinizi virgülle ayırarak yazın. Bu bilgiler proje görev atamalarında kullanılacaktır.
                            </small>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="modern-primary-btn">
                                <i class="fas fa-save"></i>
                                <span>Yetenekleri Kaydet</span>
                            </button>
                            <button type="button" class="modern-secondary-btn" onclick="toggleEdit('skills')">
                                <i class="fas fa-times"></i>
                                <span>İptal</span>
                            </button>
                        </div>
                    </form>
                    
                    <div id="skills-display" class="profile-display">
                        <% if (user.skills && user.skills.length > 0) { %>
                            <div class="skills-grid">
                                <% user.skills.forEach(skill => { %>
                                    <div class="skill-tag">
                                        <i class="fas fa-code"></i>
                                        <span><%= skill %></span>
                                    </div>
                                <% }) %>
                            </div>                        <% } else { %>
                            <div class="empty-state">
                                <i class="fas fa-star-o"></i>
                                <p>Henüz yetenek eklenmemiş</p>
                                <small>Yeteneklerinizi eklemek için düzenle butonuna tıklayın</small>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
                    </div>
                </div>
            </div>            <!-- Güvenlik & Şifre Kartı -->
            <div class="modern-card security-card">
                <div class="card-icon-header">
                    <div class="card-icon security-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="header-with-action">
                        <div>
                            <h2>Güvenlik & Şifre</h2>
                            <p>Hesap güvenliğinizi korumak için şifrenizi güncelleyin</p>
                        </div>
                        <button type="button" class="modern-secondary-btn edit-btn" onclick="toggleEdit('password')">
                            <i class="fas fa-lock"></i>
                            <span id="password-edit-text">Şifre Değiştir</span>
                        </button>
                    </div>
                </div>
                <div class="card-content">
                    <form id="password-form" action="/profile/change-password" method="POST" style="display: none;">
                        <div class="modern-form-group">
                            <label for="currentPassword">
                                <i class="fas fa-key"></i>
                                Mevcut Şifre
                            </label>
                            <input type="password" id="currentPassword" name="currentPassword" 
                                   placeholder="Mevcut şifrenizi girin" required>
                        </div>
                        <div class="modern-form-group">
                            <label for="newPassword">
                                <i class="fas fa-lock"></i>
                                Yeni Şifre
                            </label>
                            <input type="password" id="newPassword" name="newPassword" 
                                   placeholder="Yeni şifrenizi girin" minlength="6" required>
                        </div>
                        <div class="modern-form-group">
                            <label for="confirmPassword">
                                <i class="fas fa-lock"></i>
                                Yeni Şifre (Tekrar)
                            </label>
                            <input type="password" id="confirmPassword" name="confirmPassword" 
                                   placeholder="Yeni şifrenizi tekrar girin" minlength="6" required>
                        </div>
                        <div class="security-info">
                            <h4><i class="fas fa-info-circle"></i> Güvenlik Önerileri</h4>
                            <ul>
                                <li>En az 8 karakter uzunluğunda olmalı</li>
                                <li>Büyük ve küçük harf içermeli</li>
                                <li>En az bir rakam içermeli</li>
                                <li>Özel karakter kullanılması önerilir</li>
                            </ul>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="modern-primary-btn">
                                <i class="fas fa-save"></i>
                                <span>Şifreyi Değiştir</span>
                            </button>
                            <button type="button" class="modern-secondary-btn" onclick="toggleEdit('password')">
                                <i class="fas fa-times"></i>
                                <span>İptal</span>
                            </button>
                        </div>
                    </form>
                    
                    <div id="password-display" class="profile-display">
                        <div class="security-status">
                            <div class="security-item">
                                <div class="security-icon">
                                    <i class="fas fa-check-circle" style="color: var(--success);"></i>
                                </div>
                                <div class="security-info">
                                    <h4>Şifre Güvenliği</h4>
                                    <p>Güvenliğiniz için düzenli olarak şifrenizi değiştirmenizi öneririz.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>        </div>
    
    <!-- JavaScript -->
    <script src="/js/profile.js"></script>
    
    <!-- Logout functionality -->    <script>
        // Wait for dropdown to initialize first
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                var logoutButton = document.getElementById('logoutButton');
                if (logoutButton) {
                    console.log('✅ Logout button found in profile page');
                    // Event already attached by dashboard.js dropdown initialization
                } else {
                    console.error('❌ Logout button not found in profile page');
                }
            }, 200);
        });    </script>
    
    <!-- Force CSS refresh script -->
    <script>
        // Force CSS refresh to avoid cache issues
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🔄 Force refreshing CSS...');
            var links = document.getElementsByTagName('link');
            for (var i = 0; i < links.length; i++) {
                var link = links[i];
                if (link.rel === 'stylesheet') {
                    var href = link.href;
                    link.href = href + '&refresh=' + Date.now();
                    console.log('📄 CSS refreshed:', href);
                }
            }
        });
    </script>
    
    <!-- Dashboard.js for dropdown functionality -->
    <script src="/js/dashboard.js"></script>
</body>
</html>
